doctype html
html(lang='en')
  // pug: newline
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    style
      include sketch.css
  body

  // pug: newline
  // import the javascript library file(s)
  //script(src=`https://cdn.jsdelivr.net/npm/tweakpane@4/dist/tweakpane.min.js`, crossorigin='anonymous')
  script(type="module").
    // Import ES module
    import * as Tweakpane from 'https://cdn.jsdelivr.net/npm/tweakpane@4/dist/tweakpane.min.js';
  
    // Export it as a global variable
    window.Tweakpane = Tweakpane;
  script(src=`https://cdn.jsdelivr.net/npm/p5@${p5Version}/lib/p5.min.js`, crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/p5.plotsvg@latest/lib/p5.plotSvg.js', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/pen-colors@1/lib/js/pen-colors.umd.js', crossorigin='anonymous')
  each lib in libraries
    if lib.importPath
      script(src=lib.importPath, crossorigin='anonymous')

  // pug: newline
  // import the javascript sketch file
  script(src=`./${scriptFile}`)
  
  // Inject script found in my sketches folder â€” needs a better solution
  script(src='/utils.js')
    
