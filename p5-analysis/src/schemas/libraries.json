{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Libraries",
  "description": "A list of p5.js libraries",
  "type": "array",
  "items": {
    "type": "object",
    "uniqueItems": true,
    "properties": {
      "name": {
        "description": "The human-readable name of the library",
        "type": "string"
      },
      "homepage": {
        "description": "The library's home page",
        "type": "string"
      },
      "description": {
        "description": "A short description of the library",
        "type": "string"
      },
      "importPath": {
        "description": "A CDN URL that loads the library",
        "type": "string"
      },
      "packageName": {
        "description": "NPM package name",
        "type": "string"
      },
      "defines": {
        "description": "Functions and property values",
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "globals|p5": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "items": {
          "type": "object"
        }
      }
    },
    "required": [
      "name",
      "homepage",
      "description"
    ],
    "additionalProperties": false
  }
}
