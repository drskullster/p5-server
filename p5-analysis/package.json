{
  "name": "p5-analysis",
  "version": "0.5.0",
  "description": "API to find, create, and analyze p5.js sketch files.",
  "author": "Oliver Steele <steele@osteele.com> (https://osteele.com/)",
  "homepage": "https://osteele.github.io/p5-server/p5-analysis",
  "repository": "github:osteele/p5-server",
  "keywords": [
    "p5",
    "p5.js",
    "creative coding"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/osteele/p5-server/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "p5-analyze": "dist/bin/p5-analyze.js"
  },
  "scripts": {
    "build": "npm run clean && npm run copy-files && tsc --declaration",
    "build:docs": "typedoc src/index.ts",
    "clean": "rimraf dist/",
    "cli": "ts-node --files src/bin/p5-analyze.ts",
    "copy-files": "copyfiles -u 1 'src/**/*.{css,html,njk,pug,png,js,json,svg}' dist/",
    "format": "prettier-eslint --write \"{,!(node_modules)/**/}*.ts\"",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "prepack": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "commander": "^8.1.0",
    "esprima": "^4.0.1",
    "jstransformer-marked": "^1.0.3",
    "minimatch": "^3.0.4",
    "node-fetch": "^2.6.1",
    "node-html-parser": "^4.1.3",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@types/babel-core": "^6.25.7",
    "@types/eslint": "^7",
    "@types/esprima": "^4.0.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.6.1",
    "@types/node-fetch": "^2.5.12",
    "@types/nunjucks": "^3.1.5",
    "@types/rimraf": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.0.6",
    "ts-node": "^10.2.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "tests/testdata/.*/output/.*"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.ts"
    ]
  }
}
