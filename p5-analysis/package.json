{
  "name": "p5-analysis",
  "version": "0.6.5",
  "description": "API to find, create, and analyze p5.js sketch files.",
  "keywords": [
    "creative coding",
    "p5",
    "p5.js"
  ],
  "homepage": "https://osteele.github.io/p5-server/p5-analysis",
  "bugs": {
    "url": "https://github.com/osteele/p5-server/issues"
  },
  "license": "MIT",
  "author": "Oliver Steele <steele@osteele.com> (https://osteele.com/)",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "p5-analyze": "dist/bin/p5-analyze-cli.js",
    "p5-libraries": "dist/bin/p5-libraries-cli.js",
    "p5-library": "dist/bin/p5-libraries-cli.js",
    "p5-tree": "dist/bin/p5-tree-cli.js"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "repository": "github:osteele/p5-server",
  "scripts": {
    "build": "run-s clean build:copy-files && tsc --declaration",
    "build:docs": "typedoc src/index.ts && yarn run cli libraries generate | pandoc -s --toc --shift-heading-level-by -1 > build/docs/libraries.html",
    "build:copy-files": "copyfiles -u 1 'src/**/*' -e '**/*.ts' dist/",
    "clean": "rimraf dist",
    "cli": "ts-node --files src/bin/p5-analyze-cli.ts",
    "cli:libraries": "ts-node --files src/bin/p5-libraries-cli.ts",
    "cli:library": "ts-node --files src/bin/p5-libraries-cli.ts",
    "cli:tree": "ts-node --files src/bin/p5-tree-cli.ts",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "prepack": "yarn run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "commander": "^8.2.0",
    "esprima": "^4.0.1",
    "js-beautify": "^1.14.0",
    "jstransformer-marked": "^1.0.3",
    "minimatch": "^3.0.4",
    "node-fetch": "^2.6.2",
    "node-html-parser": "^5.0.0",
    "nunjucks": "^3.2.3",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/babel-core": "^6.25.7",
    "@types/copyfiles": "^2.4.1",
    "@types/eslint": "^7.28.1",
    "@types/jest": "^27.0.2",
    "@types/js-beautify": "^1",
    "@types/node": "^16.10.9",
    "@types/node-fetch": "^2.5.12",
    "@types/nunjucks": "^3.2.0",
    "@types/prettier": "^2",
    "@types/pug": "^2.0.5",
    "@types/rimraf": "^3.0.2",
    "copyfiles": "^2.4.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.0.6",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "typedoc": "^0.22.5",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14.17"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "tests/testdata/.*/output/.*"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "esbuild-jest"
    }
  }
}
