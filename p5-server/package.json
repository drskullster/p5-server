{
  "name": "p5-server",
  "version": "0.4.2",
  "description": "CLI to create and serve p5.js sketches and collections, and infer required libraries",
  "author": "Oliver Steele <steele@osteele.com> (https://osteele.com/)",
  "homepage": "https://github.com/osteele/p5-server#readme",
  "repository": "github:osteele/p5-server",
  "keywords": [
    "p5",
    "p5.js",
    "creative coding",
    "live reload",
    "web server"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/osteele/p5-server/issues"
  },
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "main": "./dist/index.js"
  },
  "bin": {
    "p5": "dist/bin/p5-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run copy-files && tsc --declaration",
    "build:docs": "typedoc src/index.ts",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 'src/**/*.{css,html,njk,pug,png,js,json,svg}' dist/",
    "cli": "ts-node src/bin/p5-server.ts",
    "start": "ts-node src/bin/p5-server.ts server",
    "server:watch": "nodemon -w src -e 'js ts css html json njk pug' src/bin/p5-server.ts serve",
    "serve:examples": "yarn server:watch examples",
    "serve:testdata": "yarn server:watch examples tests/testdata",
    "format": "prettier-eslint --write \"{,!(node_modules)/**/}*.ts\"",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "prepack": "npm run build && cp ../README.md .",
    "postpack": "rm README.md",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@types/ws": "^7.4.7",
    "chalk": "^4.1.2",
    "commander": "^8.1.0",
    "express": "^4.17.1",
    "livereload": "^0.9.3",
    "marked": "^2.1.3",
    "open": "^8.2.1",
    "p5-analysis": "workspace:0.4.2",
    "pug": "^3.0.2",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@types/eslint": "^7",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/livereload": "^0.9.1",
    "@types/marked": "^2.0.4",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.6.0",
    "@types/nunjucks": "^3.1.5",
    "@types/pug": "^2.0.5",
    "@types/update-notifier": "^5.1.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "tests/testdata/.*/output/.*"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.ts"
    ]
  }
}
