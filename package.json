{
  "name": "p5-server",
  "version": "0.1.6",
  "description": "CLI to create, run, and update p5.js sketches and collections",
  "author": "Oliver Steele <steele@osteele.com> (https://osteele.com/)",
  "homepage": "https://github.com/osteele/p5-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osteele/p5-server.git"
  },
  "keywords": [
    "p5.js",
    "web server",
    "live reload"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/osteele/p5-server/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "p5": "dist/bin/p5-server.js"
  },
  "scripts": {
    "build": "npm run clean && npm run copy-files && tsc --declaration",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.{css,html,njk,pug,png,js} dist/",
    "dev": "ts-node src/bin/p5-server.ts",
    "dev:serve": "nodemon -w src -e 'js ts css html json njk pug' src/bin/p5-server.ts serve",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "files": [
    "config",
    "dist",
    "src",
    "README.md"
  ],
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^8.0.0",
    "copyfiles": "^2.4.1",
    "esprima": "^4.0.1",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "jstransformer-marked": "^1.0.3",
    "livereload": "^0.9.3",
    "marked": "^2.1.3",
    "minimatch": "^3.0.4",
    "node-html-parser": "^4.1.0",
    "nunjucks": "^3.2.3",
    "open": "^8.2.1",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/esprima": "^4.0.3",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.1.4",
    "@types/jest": "^26.0.24",
    "@types/livereload": "^0.9.1",
    "@types/marked": "^2.0.4",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.4.0",
    "@types/nunjucks": "^3.1.5",
    "@types/open": "^6.2.1",
    "@types/pug": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
